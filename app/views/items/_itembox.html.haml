= link_to item_path(item.id) do
  .items-box
    -if item.buyer_id != nil
      .sold-out
        SOLD OUT
    .items-box--img
      =image_tag(item.image.url, class: 'main-image' )
    .items-box--in
      %h3.items-box--in__name
        = item.name
      .items-box--in__price
        = "#{number_with_delimiter(item.price)}å††"